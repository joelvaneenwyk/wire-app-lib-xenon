# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2

[*.md]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab

[*.{xml,html}]
indent_style = space
indent_size = 2

[*.{kts,kt}]
indent_style = space
indent_size = 4
